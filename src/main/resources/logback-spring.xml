<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true">
    <!-- デフォルト設定読み込み -->
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <property name="logFileName" value="sakeman" />

    <!-- ローカル環境用設定 -->
    <springProfile name="local">
        <property name="logFilePath" value="./" />
    </springProfile>

    <!-- dev環境用設定（本番環境として使用） -->
    <springProfile name="dev">
        <property name="logFilePath" value="/var/log/sakeman/" />
    </springProfile>

    <!-- コンソール出力設定 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy/MM/dd HH:mm:ss} %-5level [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- アプリケーションのログファイル出力設定（ローテーション） -->
    <appender name="APPLICATION_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logFilePath}${logFileName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logFilePath}${logFileName}-%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>14</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy/MM/dd HH:mm:ss} %-5level [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- HikariCPのログファイル出力設定（ローテーション） -->
    <appender name="HIKARI_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logFilePath}hikari.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logFilePath}hikari-%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>14</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy/MM/dd HH:mm:ss} %-5level [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- rootログレベルと適用するログ出力設定 -->
    <root level="ERROR">
        <appender-ref ref="APPLICATION_LOG" />
    </root>

    <!-- HikariCPのログ出力設定 -->
    <logger name="com.zaxxer.hikari" level="TRACE" additivity="false">
        <appender-ref ref="HIKARI_LOG"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.zaxxer.hikari.pool" level="DEBUG" additivity="false">
        <appender-ref ref="HIKARI_LOG"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.zaxxer.hikari.HikariConfig" level="DEBUG" additivity="false">
        <appender-ref ref="HIKARI_LOG"/>
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>
